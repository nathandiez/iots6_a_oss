# === PROJECT SETTINGS ===
PROJECT_NAME=iots6
TARGET_HOSTNAME=aziots6

# === AZURE SETTINGS ===
AZURE_LOCATION="East US"
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
RESOURCE_GROUP=rg-iots6-aks
CLUSTER_NAME=iots6-aks

# === DATABASE SETTINGS ===
POSTGRES_DB=iotdb
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password

# === GRAFANA SETTINGS ===
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# === KUBERNETES SETTINGS ===
AKS_NAMESPACE=iots6
AKS_NODE_COUNT=3
AKS_NODE_SIZE=Standard_D2s_v3

# === ARGOCD SETTINGS ===
ARGOCD_VERSION=v2.9.3
ARGOCD_NAMESPACE=argocd

# === DATADOG MONITORING ===
DATADOG_API_KEY=your-actual-api-key-here
DATADOG_SITE=us5.datadoghq.com

# === STORAGE SIZES ===
TIMESCALEDB_STORAGE_SIZE=10Gi
MOSQUITTO_STORAGE_SIZE=2Gi
GRAFANA_STORAGE_SIZE=2Gi

# === SSH SETTINGS (for VM deployment) ===
ANSIBLE_USER=your_username
SSH_KEY_PATH=~/.ssh/your_ssh_key_name
SSH_KEY_NAME=your_ssh_key_name

# === CONTAINER NAMES (for VM deployment) ===
TIMESCALE_CONTAINER_NAME=timescaledb
MQTT_CONTAINER_NAME=mosquitto
GRAFANA_CONTAINER_NAME=grafana
IOT_SERVICE_CONTAINER_NAME=iot_service

# === HELM SETTINGS ===
HELM_REPO_NAME=iots6
HELM_REPO_URL=https://github.com/nathandiez/iots6_az_oss.git

# === EXTERNAL SECRETS ===
KEY_VAULT_NAME=kv-iots6
KEY_VAULT_RESOURCE_GROUP=rg-iots6-aks